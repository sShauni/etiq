[Unit]
Description=Montar compartilhamento SMB para logs da etiqueta
After=network-online.target
Wants=network-online.target

[Mount]
What=//192.168.0.250/ArquivosProducao
Where=/mnt/logs
Type=cifs
Options=credentials=/etc/samba_credenciais,iocharset=utf8,file_mode=0777,dir_mode=0777,noperm
TimeoutSec=30

[Install]
WantedBy=multi-user.target